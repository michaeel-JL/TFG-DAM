        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoDAM">

        <activity android:name=".Activities.SplashActivity"
            android:label="@string/title_activity_perfil">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
